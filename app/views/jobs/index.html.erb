<div id="container">
<div class="job-header">
  <div class="input-search">
    <%= form_tag jobs_path, method: :get do %>
      <%= text_field_tag :keyword, nil, :placeholder => "Search by title or city" %>
    <% end %>


  </div>
  <div class="new-btn">
      <%= link_to "Post a new Apprenticeship", new_job_url, class: "button"%>
  </div>
</div>
<div class="jobs">
  <ul>
    <% if @jobs.any? %>
    <% @jobs.each do |job| %>
<a href="/jobs/<%= job.id %>">
    <li class="job">
      <div class="job-info">
        <span class="location"><%= job.location %></span>
        <span class="title"><%= job.title %></span> at
        <span class="company"><%= job.company %></span>.
      </div>
      <div class="date">
        <span><%= job.created_at.to_date.strftime("%b %m") %></span>
      </div>
    </li></a>
  <% end %>
  </ul>
  <% else %>
  <h3>Sorry, no results.</h3>
  <% end %>
</div>  
</div>
<%= render 'shared/footer' %>